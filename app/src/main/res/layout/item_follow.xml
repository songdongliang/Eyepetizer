<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="avatar"
            type="String"/>
        <variable
            name="title"
            type="String"/>
        <variable
            name="description"
            type="String"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60">
            <ImageView
                android:id="@+id/image_avatar"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp16"
                android:src="@mipmap/default_avatar"
                app:imageUrl="@{avatar}"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp16"
                android:layout_toEndOf="@id/image_avatar"
                android:layout_toStartOf="@+id/tv_category">
                <TextView
                    style="@style/Text.Normal.Black"
                    android:maxLines="1"
                    tools:text="life不止眼前的过去，and诗和远方"
                    android:text="@{title}"/>
                <TextView
                    android:id="@+id/text_description"
                    style="@style/Text.SmallMore"
                    tools:text="a/b/c/06`19`"
                    android:text="@{description}"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_category"
                style="@style/Text.Black"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp16"
                android:textSize="@dimen/sp12"
                android:text="@string/video_attention"
                android:background="@drawable/btn_radius_black_border_bg"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp16"
            app:layout_constraintTop_toBottomOf="@id/layout_item">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
